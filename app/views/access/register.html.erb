<div class="page-header">
    <h1>
      <%= link_to "UniLife", {:action => 'index'} %>
      <small><%= link_to "Where teams come true", {:action => 'index'} %></small>
    </h1>
  </div>


  <% if !flash[:notice].blank? %>
      <div class="notice">
        <%= flash[:notice] %>
        <% flash[:notice] = nil %>
    </div>
  <% end %>

  <div class="access register">
      <h2>Create Account</h2>

        <%= form_for(:user, :url => {:action => 'create'}) do |f| %>

            <table summary="Access form fields">
            <tr>
              <th><%= f.label(:first_name) %></th>
              <td><%= f.text_field(:first_name, class: "input-group form-control") %></td>
            </tr>
            <tr>
              <th><%= f.label(:middle_name) %></th>
              <td><%= f.text_field(:middle_name, class: "input-group form-control") %></td>
            </tr>
            <tr>
              <th><%= f.label(:last_name) %></th>
              <td><%= f.text_field(:last_name, class: "input-group form-control") %></td>
            </tr>
            <tr>
              <th><%= f.label(:birth_date) %></th>
              <td><%= f.date_select(:birth_date, :order => [:day, :month, :year], class: "btn btn-default dropdown-toggle") %></td>
            </tr>
            <tr>
              <th><%= f.label(:email) %></th>
              <td><%= f.text_field(:email, class: "input-group form-control") %></td>
            </tr>
            <tr>
              <th><%= f.label(:password) %></th>
              <td><%= f.password_field(:password, class: "input-group form-control") %></td>
            </tr>
            <tr>
              <th><%= f.label(:avatar) %></th>
              <td><%= f.file_field :avatar %>
          </tr>
          <tr>
            <th><%= f.label(:unit_of_studies) %></th>
            <td><%= f.text_field(:unit_of_studies, class: "input-group form-control") %></td>
          </tr>
          </table>

            <div>
              <%= submit_tag "Create Account", class: 'btn btn-default' %>
            </div>

              <% end %>
              <%= link_to("Cancel", {:action => 'login'}, :class => 'back-link') %>

            </div>
