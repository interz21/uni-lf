<%= link_to("Head on back", {:action => 'index'}, :class => 'back-link') %>

<div class="listings new">
  <h2>Create Listing</h2>

  <%= form_for(:listing, :url => {:action => 'create'}) do |f| %>

  <table summary="Listing form fields">
    <tr>
      <th>Name</th>
      <td><%= f.text_field(:name) %></td>
    </tr>
    <tr>
      <th>Description</th>
      <td><%= f.text_field(:description) %></td>
    </tr>
    <tr>
      <th>Price</th>
      <td><%= f.text_field(:price) %></td>
    </tr>
      <tr><th> <%= f.label :avatar, class: 'col-sm-2 control-label'  %></th>
          <td> <%= f.file_field :avatar %></td>
        </tr>

  </table>

  <div>
    <%= submit_tag("Create Listing") %>
  </div>

  <% end %>

</div>
